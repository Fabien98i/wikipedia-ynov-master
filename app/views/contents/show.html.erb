  <p id="notice"><%= notice %></p>
  <h1> All modifications about this Article  </h1>

  
  <table>
    <thead>
      <tr>
        <th>Contents id</th>
        <th>Article id</th>
        <th>Users id</th>
        <th>Users Name</th>
        <th>Contents</th>
        <th>Updated_at</th>
      </tr>
    </thead>

    <tbody>
      <% @content.each do |content| %>
        <tr>
          <td><%= content.id %></td>
          <td><%= content.article_id %></td>
          <td><%= content.userid %></td>
          <td><%= content.username %></td>
          <td><%= markdown(content.content) %></td>
          <td><%= content.created_at%></td>
        </tr>
      <% end %>
    </tbody>
  </table>

